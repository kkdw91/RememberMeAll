<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="149dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginTop="106dp"
                android:src="@drawable/rm_logo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:weightSum="1">
            <EditText
                android:id="@+id/idText"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/rm_profile"
                android:drawableStart="@drawable/rm_profile"
                android:hint="example@email.com"
                android:padding="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />
            <EditText
                android:id="@+id/passwordText"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/rm_pw"
                android:drawableStart="@drawable/rm_pw"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />
            <Button
                android:id="@+id/Loginbtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rm_btn_login"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="12dp"
                android:layout_above="@+id/button2"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignRight="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:background="@drawable/rm_btn_fb" />
            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="50dp"
                android:background="@drawable/rm_btn_google" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center">
            <Button
                android:id="@+id/Signbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:background="@color/colorPrimary"
                android:text="회원가입"
                android:textColor="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="52dp"
                android:layout_marginStart="52dp"
                android:text="아직회원이 아니시라면?"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>